      <th scope="col">Prix</th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    {% for formation in formations %}
        <tr>
        <th scope="row">{{ formation.id }}</th>
        <td>{{ formation.icon }}</td>
        <td>{{ formation.formationName }}</td>
        <td>{{ formation.price }}</td>
